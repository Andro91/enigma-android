<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape
        android:shape="rectangle"
        android:thickness="0dp">
        <corners
            android:radius="10dp"/>
        <stroke
            android:width="2dp"
            android:color="#33555555" />
        <gradient
            android:angle="270"
            android:endColor="#33AAAAAA"
            android:startColor="#33777777"
            android:gradientRadius="500dp"
            android:type="radial" />
    </shape>
</item>
<item>
    <shape
        android:shape="rectangle"
        android:thickness="0dp">
        <corners
            android:radius="10dp"/>
        <stroke
            android:width="2dp"
            android:color="#66555555" />
        <gradient
            android:angle="270"
            android:endColor="#AAAAAA"
            android:startColor="#FFFFFF"
            android:gradientRadius="500dp"
            android:type="linear" />
    </shape>
</item>
</selector>